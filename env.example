# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Параллелизм и производительность
WORKER_COUNT=5                    # Количество воркеров (5-20)
QUEUE_BUFFER_SIZE=10              # Размер буфера очереди
RATE_LIMIT_PER_SEC=20             # Лимит запросов к Telegram API в секунду

# HTTP клиент
HTTP_TIMEOUT=30                   # Таймаут HTTP запросов в секундах
MAX_RETRIES=3                     # Максимальное количество повторов

# Логирование
LOG_LEVEL=info                    # debug, info, warn, error
METRICS_INTERVAL=5                # Интервал логирования метрик в минутах

# Примеры настроек для разных нагрузок:

# Низкая нагрузка (до 10 пользователей одновременно)
# WORKER_COUNT=3
# QUEUE_BUFFER_SIZE=5
# RATE_LIMIT_PER_SEC=10

# Средняя нагрузка (10-50 пользователей одновременно)
# WORKER_COUNT=8
# QUEUE_BUFFER_SIZE=15
# RATE_LIMIT_PER_SEC=20

# Высокая нагрузка (50+ пользователей одновременно)
# WORKER_COUNT=15
# QUEUE_BUFFER_SIZE=30
# RATE_LIMIT_PER_SEC=30
